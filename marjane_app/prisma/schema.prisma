// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Admin {
  id       Int    @id @default(autoincrement())
  fName    String
  lName    String
  email    String @unique
  password String
  createdAt  DateTime @default(now())
}

model SubAdmin {
  id        Int         @id @default(autoincrement())
  fName     String
  lName     String
  email     String      @unique
  password  String
  center    Center      @relation(fields: [idCenter], references: [id])
  idCenter  Int         @unique
  Promotion Promotion[]
  createdAt  DateTime @default(now())
}

model Manager {
  id         Int      @id @default(autoincrement())
  fName      String
  lName      String
  email      String   @unique
  password   String
  category   Category @relation(fields: [idCategory], references: [id])
  idCategory Int      @unique
  createdAt  DateTime @default(now())
}

model Center {
  id       Int        @id @default(autoincrement())
  name     String     @unique
  SubAdmin SubAdmin?
  Category Category[]
  createdAt  DateTime @default(now())
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String    
  center   Center    @relation(fields: [idCenter], references: [id])
  idCenter Int
  Manager  Manager?
  Product  Product[]
  createdAt  DateTime @default(now())
}

model Product {
  id         Int         @id @default(autoincrement())
  name       String      @unique
  quantity   Int         @default(0)
  category   Category    @relation(fields: [idCategory], references: [id])
  idCategory Int         
  Promotion  Promotion[]
  createdAt  DateTime @default(now())
}

model Promotion {
  id             Int      @id @default(autoincrement())
  percentage     Int      @default(0)
  pointsFidelity Int      @default(0)
  status         String   @default("ongoing")
  comment        String   @default("")
  SubAdmin       SubAdmin @relation(fields: [idSubAdmin], references: [id])
  idSubAdmin     Int
  Product        Product  @relation(fields: [idProduct], references: [id])
  idProduct      Int
  createdAt  DateTime @default(now())
}

model logs {
  id      Int  @id @default(autoincrement())
  comment Json
  createdAt  DateTime @default(now())
}