// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Admin {
  id       Int    @id @default(autoincrement())
  fName    String
  lName    String
  email    String @unique
  role     Role   @default(ADMIN)
  password String
}

model SubAdmin {
  id       Int    @id @default(autoincrement())
  fName    String
  lName    String
  email    String @unique
  role     Role   @default(SUBADMIN)
  password String
  center   Center @relation(fields: [idCenter], references: [id])
  idCenter Int
}

model Manager {
  id       Int    @id @default(autoincrement())
  fName    String
  lName    String
  email    String @unique
  role     Role   @default(MANAGER)
  password String
}

enum Role {
  ADMIN
  SUBADMIN
  MANAGER
}

model Center {
  id   Int    @id @default(autoincrement())
  name String @unique
  SubAdmin SubAdmin?
}
