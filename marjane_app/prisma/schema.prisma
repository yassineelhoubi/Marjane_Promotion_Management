// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Admin {
  id       Int    @id @default(autoincrement())
  fName    String
  lName    String
  email    String @unique
  password String
}

model SubAdmin {
  id       Int    @id @default(autoincrement())
  fName    String
  lName    String
  email    String @unique
  password String
  center   Center @relation(fields: [idCenter], references: [id])
  idCenter Int    @unique
}

model Manager {
  id         Int      @id @default(autoincrement())
  fName      String
  lName      String
  email      String   @unique
  password   String
  category   Category @relation(fields: [idCategory], references: [id])
  idCategory Int      @unique
}

model Center {
  id       Int        @id @default(autoincrement())
  name     String     @unique
  SubAdmin SubAdmin?
  Category Category[]
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  center   Center    @relation(fields: [idCenter], references: [id])
  idCenter Int       @unique
  Manager  Manager?
}
